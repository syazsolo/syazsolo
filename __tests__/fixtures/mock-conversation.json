{
  "id": "test-bot",
  "name": "Test Bot",
  "avatar": "/test-avatar.jpg",
  "initialState": "welcome",
  "states": {
    "welcome": {
      "message": "Welcome to the test conversation!",
      "quickReplies": [
        { "text": "Say hello", "nextState": "greeting" },
        { "text": "Get help", "nextState": "help_menu" },
        { "text": "Tell me something random", "nextState": "random_facts" }
      ]
    },
    "greeting": {
      "message": "Hello! Nice to meet you.",
      "quickReplies": [
        { "text": "Tell me more about yourself", "nextState": "about" },
        { "text": "Go back", "nextState": "welcome" }
      ]
    },
    "about": {
      "message": "I am a test bot designed to help verify conversation flows.",
      "quickReplies": [
        { "text": "What can you do?", "nextState": "capabilities" },
        { "text": "Go back", "nextState": "greeting" }
      ]
    },
    "capabilities": {
      "message": "I can test conversation flows and state transitions.",
      "quickReplies": [{ "text": "Back to about", "nextState": "about" }]
    },
    "help_menu": {
      "message": "I can help you with various things.",
      "quickReplies": [
        { "text": "View FAQ", "nextState": "faq" },
        { "text": "Back to main menu", "nextState": "welcome" }
      ]
    },
    "faq": {
      "message": "Here are some frequently asked questions...",
      "quickReplies": [
        { "text": "What is this?", "nextState": "faq_answer" },
        { "text": "Back", "nextState": "help_menu" }
      ]
    },
    "faq_answer": {
      "message": "This is a test conversation system.",
      "quickReplies": [
        { "text": "Ask another question", "nextState": "faq" },
        { "text": "Back to help menu", "nextState": "help_menu" }
      ]
    },
    "random_facts": {
      "message": [
        "Did you know cats sleep 70% of their lives?",
        "The sky is blue because of Rayleigh scattering.",
        "Honey never spoils!"
      ],
      "quickReplies": [
        { "text": "Tell me another fact", "nextState": "more_facts" },
        { "text": "Back to start", "nextState": "welcome" }
      ]
    },
    "more_facts": {
      "message": [
        "Octopuses have three hearts.",
        "Bananas are berries, but strawberries are not.",
        "A day on Venus is longer than its year."
      ],
      "quickReplies": [
        { "text": "More random facts", "nextState": "random_facts" },
        { "text": "Back to start", "nextState": "welcome" }
      ]
    }
  }
}
